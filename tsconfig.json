{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react",
      "baseUrl": "./",
      "paths": {
        "src/*": [
          "./src/*"
        ]
      }
    },
    "include": [
      "./src"
    ],
    "exclude": [
      "node_modules"
    ]
  }